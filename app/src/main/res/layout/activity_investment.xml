<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bangbit.in.coinanalysis.EditAddInvestmentActivity.EditAddInvestmentActivity"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/gradient_horizontal"
        android:elevation="@dimen/dp2"
        android:layout_alignParentTop="true"
        app:contentInsetStart="@dimen/dp0"
        app:titleTextAppearance="@style/ToolbarTextAppearance.Title">

        <ImageView
            android:id="@+id/back_imageView"
            android:layout_width="@dimen/toolbar_height"
            android:layout_height="@dimen/toolbar_height"
            android:padding="@dimen/dp16"
            android:src="@drawable/close"
            android:background="@drawable/circuler_ripple"/>

        <ImageView
            android:id="@+id/coin_icon"
            android:layout_width="@dimen/dp24"
            android:layout_height="@dimen/dp24"
            android:layout_marginRight="@dimen/dp16"
            />

        <TextView
            android:id="@+id/coin_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Investment"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp24"
            android:layout_marginRight="@dimen/dp112"/>

        <ImageView
            android:id="@+id/save_icon"
            android:layout_width="@dimen/toolbar_height"
            android:layout_height="@dimen/toolbar_height"
            android:padding="@dimen/dp16"
            android:layout_marginLeft="-10dp"
            android:layout_gravity="right"
            android:src="@drawable/save"
            android:background="@drawable/circuler_ripple"/>

        <ImageView
            android:id="@+id/delete_icon"

            android:layout_width="@dimen/toolbar_height"
            android:layout_height="@dimen/toolbar_height"
            android:padding="@dimen/dp16"
            android:layout_gravity="right"
            android:src="@drawable/ic_action_delete"

            android:background="@drawable/circuler_ripple"/>


    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_toolbar"></FrameLayout>
</RelativeLayout>
