<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bangbit.in.coinanalysis.EditAddInvestmentActivity.AddInvestmentFragment">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp16">
    <TextView
        style="@style/bold_12sp_pink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp35"
        android:background="@drawable/divider_line"
        android:orientation="vertical">

        <EditText
            android:id="@+id/quantity_EditText"
            style="@style/regular_16sp_textColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:backgroundTint="@android:color/transparent"
            android:inputType="none|numberDecimal" />
    </LinearLayout>

    <TextView
        style="@style/bold_12sp_pink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bought Price" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp35"
        android:background="@drawable/divider_line"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/currencySymbol_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/regular_16sp_textColor"
            android:text="$"/>

        <EditText
            android:id="@+id/bought_price_EditText"
            style="@style/regular_16sp_textColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:backgroundTint="@android:color/transparent"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <TextView
        style="@style/bold_12sp_pink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bought Date" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp35"
        android:background="@drawable/divider_line"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bought_date_EditText"
            style="@style/regular_16sp_textColor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp42"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:gravity="center_vertical"
            android:backgroundTint="@android:color/transparent"
            />
    </LinearLayout>

    <TextView
        style="@style/bold_12sp_pink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notes" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp10"
        android:background="@drawable/divider_line"
        android:orientation="vertical">

        <EditText
            android:id="@+id/note_EditText"
            style="@style/regular_16sp_textColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:backgroundTint="@android:color/transparent"
            android:maxLength="120" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_count_text"
        style="@style/regular_12sp_pink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="0/1024" />
</LinearLayout>

</ScrollView>
